<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheet/stylesheet.css">
    <title>All Books</title>
</head>

<body> <main class="container" >  
    <%- include('../partials/_navbar.ejs')  %>
    <a class="button href="#">
         
        Add new Book to wishlist
      </a>

    <table>
        <th>Title</th>
        <th>Author</th>
        <th>Category</th>
        <th>price</th>
        <th>Quantity</th>
        <th>Details</th>
        <th>Edit</th>
        <th>Remove</th>
        <% books.forEach((book)=> { %>
            <tr>
                <td>
                    <%= book.title %>
                </td>
                <td><%=book.author %></td>
                <td><%=book.category%></td>
                <td><%=book.price%></td>
                <td><%=book.stockQuantity%></td>
                <td><a href="/books/<%= book._id %>" >Details</a></td>
                <td>
                    <a href="/books/<%= book._id %>/edit">
                        Edit
                      </a>
                </td>
                <td>
                    <form action="/books/<%= book._id %>?_method=DELETE"
                        method="POST">
                        <button type="submit">remove</button>
                    </form>
                </td>
            </tr>


            <% }); %>
    </table>
</main>
</body>

</html>