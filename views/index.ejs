<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheet/stylesheet.css">
    <title>Home Page</title>
  </head>
  <body>
    <main class="container">
    <%- include('./partials/_navbar.ejs')  %>
    <% if (user) { %>
      <h1>Welcome to BetweenTheLines Book Store, <%= user.username %>!</h1>

      
      <% } else { %>
      <h1>Welcome to the app, guest.</h1>
      <p>
        <a class="button" href="/auth/sign-up">Sign up</a> or <a class="button" href="/auth/sign-in">sign in</a>.
      </p>
      <% } %>

      <p><a  class="button" href="/listbooks">Explore the Books!</a></p>
    
  </main>
  </body>
