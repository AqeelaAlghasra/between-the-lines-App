<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheet/stylesheet.css">
    <title>Add New book</title>
</head>

<body>
    <main class="container">
        <%- include('../partials/_navbar.ejs') %>
            
                <h1>Add new book</h1>
                <div>
                    <form action="/admin/books/" method="POST">
                        <div>
                            <label for="authorId">Author Name:</label>
                            <select name="authorId" id="authorId">
                                <% authors.forEach(author=> { %>
                                    <option name="authorId" value="<%= author._id %>">
                                        <%= author.firstName%>
                                            <%=author.lastName %>
                                    </option>
                                    <%}); %>
                            </select>
                        </div>
                </div>
                <div>
                    <label for="title">Title:</label>
                    <input type="text" name="title" id="title" value="" />
                </div>
                <div>
                    <label for="description">Description</label>
                    <textarea name="description" id="description"></textarea>
                </div>
                <div>
                    <label for="price">Price</label>
                    <input type="number" name="price" id="price" />
                </div>
                <div>
                    <label for="stockQuantity">Quantity</label>
                    <input type="number" name="stockQuantity" id="stockQuantity" />
                </div>
                <div>
                    <label for="thumbnail">thumbnail</label>
                    <input type="text" name="thumbnail" id="thumbnail" />
                </div>
                <div>
                    <label for="publishedDate">Published Date</label>
                    <input type="date" name="publishedDate" id="publishedDate" />
                </div>
                <div>
                    <label for="pages">Pages</label>
                    <input type="number" name="pages" id="pages" />
                </div>

                <label for="category">Categories:</label>
                <select name="category">
                    <option value="Fiction">Fiction</option>
                    <option value="Non-Fiction">Non-Fiction</option>
                    <option value="Children's Books">Children's Book</option>
                    <option value="Comics">Comics</option>
                    <option value="Reference">Reference</option>
                    <option value="Spiritual">Spiritual</option>
                    <option value="History">History</option>
                    <option value="Business and Economics">Business and Economics</option>
                </select>

                <button class="button" type="submit">Add Book</button>

                </form>
                
                    </div>
    </main>
</body>

</html>